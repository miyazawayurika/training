<h2>CXOMONSTER登録フォームです。</h2>
<h2>最高のCXO人材を見つけ最高の旅をしましょう。</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "password" %>
  </div>

  <div class="field form-group">
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name, autofocus: true, autocomplete: "company_name" %>
  </div>

  <div class="field form-group">
    <%= f.label :number %><br />
    <%= f.telephone_field :number, autofocus: true, autocomplete: "number" %>
  </div>

  <div class="field form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

   <div class="field form-group">
    <%= f.label :CXO_type %><br />
    <label>
    <%= f.radio_button :CXO_type, autofocus: true, autocomplete: "CFO(Finance)" %>
   </label>
   <label>
    <%= f.radio_button :CXO_type, autofocus: true, autocomplete: "CMO(Marketink)" %>
    </label>
    <label>
    <%= f.radio_button :CXO_type, autofocus: true, autocomplete: "CJO(Legal)" %>
    </label>
    <label>
    <%= f.radio_button :CXO_type, autofocus: true, autocomplete: "CTO(Technology)" %>
    </label>
    <label>
    <%= f.radio_button :CXO_type, autofocus: true, autocomplete: "CEO(社長)" %>
    </label>
  </div>

  <div class="field form-group">
    <%= f.label :CXO_specific %><br />
    <%= f.text_area :number, autofocus: true, autocomplete: "CXO_specific" %>
  </div>



  <div class="actions btn">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>